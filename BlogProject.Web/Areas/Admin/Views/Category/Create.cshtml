@model CreateCategoryDTO
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-sm-6">
        <div class="box">
            <div class="box-header">
                <h4 class="box-title">Create Category</h4>
            </div>
            <div class="box-body">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Name"></label>
                        <input asp-for="Name" class="form-control" placeholder="Category Name" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description"></label>
                        <input asp-for="Description" class="form-control" placeholder="Category Description" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group float-right">
                        <input type="submit" value="Submit" class="btn btn-sm btn-primary" />
                    </div>
                </form>
            </div>
            <div class="box-footer">
                <a asp-action="List" class="btn btn-block btn-dark">Back To List</a>
            </div>
        </div>
    </div>
</div>